/* pages/playSong/playSong.wxss */

.playsong {
    width: 100%;
    height: 1200rpx;
    filter: blur(150px);
}

.p-song {
    top: 40rpx;
    color: white;
    width: 100%;
    text-align: center;
}

.title {
    font-size: 34rpx;
    font-weight: bold;
}

.name-p {
    font-size: 28rpx;
}

.src {
    width: 50rpx;
    height: 50rpx;
}

.p-src {
    width: 80%;
    margin: 100rpx auto;
}

.audio_progress {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.audio_progress slider {
    width: 80%;
}

.audio_progress view {
    padding: 18rpx;
}

.music {
    width: 400rpx;
    height: 400rpx;
    border-radius: 400rpx;
    margin-top: 100rpx;
    -webkit-animation-iteration-count: infinite;
}

.music-on {
    animation: music-rotate 10s linear infinite;
}


/* 旋转动画 */

@keyframes music-rotate {
    0% {
        transform: rotateZ(0deg);
    }
    100% {
        transform: rotateZ(360deg);
    }
}